<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/showWordButton"
            android:layout_width="216dp"
            android:layout_height="60dp"
            android:layout_marginTop="470dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="151dp"
            android:backgroundTint="#F4F0F0"
            android:text="HADİ BAŞLAYALIM!"
            android:textColor="#000000"
            android:textColorHint="#0A9DDF"
            android:textSize="16sp"
            app:cornerRadius="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.809"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="37dp"
            android:layout_height="26dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/log"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/englishWordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="00dp"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/wordTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:textStyle="italic"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/translate"
            android:visibility="invisible" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="38dp"
            android:src="@drawable/dic"
            android:visibility="invisible" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="290dp"
            android:layout_height="101dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="130dp"
            android:visibility="invisible"
            android:elevation="4dp"
            android:paddingTop="20dp"
            app:cardBackgroundColor="#87CEFA"
            app:cardCornerRadius="8dp"
            app:cardElevation="18dp">
            <TextView
                android:id="@+id/meaningTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="meaning"
                android:textColor="@android:color/black"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/turkishTranslationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardVie1w"
            android:layout_width="290dp"
            android:layout_height="101dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="245dp"
            android:elevation="4dp"
            android:paddingTop="20dp"
            app:cardBackgroundColor="#FFB6C1"
            app:cardCornerRadius="8dp"
            app:cardElevation="18dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/deftext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="defination"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                />


            <TextView
                android:id="@+id/defination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="350dp">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/material"
            android:layout_width="290dp"
            android:layout_height="101dp"
            android:layout_margin="8dp"
            android:paddingTop="50dp"
            android:layout_marginTop="550dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F0F8FF"
            android:visibility="invisible">

            <TextView
                android:id="@+id/example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="5dp"
                android:text="example"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/exampleSentenceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:textSize="18sp" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/hosgeldin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WordWise'a hoş geldiniz!"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="90dp"
            android:textStyle="italic"
            android:textSize="20dp"/>


        <ImageView
            android:id="@+id/hosgeldinimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-10dp"
            android:src="@drawable/logoo"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/hosgeldin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WordWise, bünyesinde 1000'den fazla ingilizce kelime, bu kelimelerin tanıları, türü, türkçe karşlılıkları ve örnek cümlelerini barındıran pratik bir İngilizce kelime ezber uygulamasıdır. Ek olarak, WordWise'da soru-cevap, kelime bulmacası gibi egzersizler bulunuyor. Tüm bunların tadını çıkarırken kendini geliştirebilir, puan kazanabilir, seviye atlayabilir ve gelecekte bizden harika ödüller kazanabilirsin! Ah, neredeyse unutuyordum! 'Profilim' ekranında kendine özgü bir bölüm var. Bilgilerini güncellemeyi ve WordWise'ın tadını çıkarmayı unutma!"
            android:textStyle="italic"
            android:layout_marginTop="35dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/hosgeldin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Öğrenme serüvenine başlamak üzeresin, yalnızca şu parlak düğmeye basman gerekiyor!"
            android:textStyle="italic"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textSize="13sp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>